{
  "name": "vibe-coder",
  "displayName": "vibe-coder",
  "description": "Voice-first coding assistant powered by Deepgram",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0",
    "node": ">=16.0.0"
  },
  "type": "commonjs",
  "publisher": "test",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "extensionDependencies": [],
  "extensionPack": [],
  "extensionKind": [
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibe-coder.test",
        "title": "Vibe Coder: Test Command"
      },
      {
        "command": "vibe-coder.startAgent",
        "title": "Vibe Coder: Start Voice Agent"
      },
      {
        "command": "vibe-coder.startDictation",
        "title": "Vibe Coder: Toggle Dictation"
      },
      {
        "command": "vibe-coder.openPanel",
        "title": "Vibe Coder: Open Panel"
      },
      {
        "command": "vibe-coder.managePrompts",
        "title": "Vibe Coder: Manage Dictation Prompts"
      }
    ],
    "keybindings": [
      {
        "command": "vibe-coder.startAgent",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "vibe-coder.startDictation",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "!inDebugRepl"
      },
      {
        "command": "vibe-coder.openPanel",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      },
      {
        "command": "vibe-coder.startPTT",
        "key": "alt",
        "mac": "alt"
      },
      {
        "command": "vibe-coder.endPTT",
        "key": "alt",
        "mac": "alt",
        "when": "!altKey"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/readable-stream": "^4.0.18",
    "@types/vscode": "^1.92.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@deepgram/sdk": "^3.0.0",
    "code": "^5.2.4",
    "node-microphone": "^0.1.6",
    "speaker": "^0.5.5",
    "speex-resampler": "^3.0.1",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  }
}
